@using IspitniRokovi.Models
@model List<PopisIspitaViewModel>
@{
    ViewBag.Title = "Popis ispita";
}

<div class="mt-20"></div>
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-xs-12">
            <div class="well">
                <ul class="nav nav-list">
                    <li><a href="@Url.Action("PopisKorisnika","Admin")"><span class="glyphicon glyphicon-tasks" style="color:black;"></span> Korisnici</a></li>
                    <li class="btn-info"><a href="@Url.Action("PopisIspita","Admin")"><span class="glyphicon glyphicon-tasks" style="color:black;"></span> Ispiti</a></li>
                    <li><a href="@Url.Action("PopisKolegija","Admin")"><span class="glyphicon glyphicon-tasks" style="color:black;"></span> Kolegiji</a></li>
                    <li><a href="@Url.Action("PopisStudija","Admin")"><span class="glyphicon glyphicon-tasks" style="color:black;"></span> Studiji</a></li>
                </ul>
            </div>
        </div>
        <div class="col-lg-9 col-xs-12">
            <div class="well">
                <div class="container">
                    <div class="row col-md-6 col-md-offset-2 custyle">
                        <table class="table table-striped custab table-bordered">
                            <thead>
                                <tr>
                                    <th>Kolegij</th>
                                    <th>Vrijeme</th>
                                    <th>Ak. godina</th>
                                    <th>Tip</th>
                                    <th>Profesor</th>
                                    <th>Studij</th>
                                    <th class="text-center" style="margin-bottom:5px;">Action</th>
                                </tr>
                            </thead>
                            @foreach (PopisIspitaViewModel i in Model)
                            {
                                <tr>
                                    <td>@i.kolegij.ime</td>
                                    <td>@i.ispit.datum.ToString("HH:mm dd.MM.yyyy")</td>
                                    <td>@i.ispit.ak_godina</td>
                                    <td>@Ispiti.typesList[i.ispit.tip]</td>
                                    <td>@(i.profesor.ime + " " + i.profesor.prezime)</td>
                                    <td>@i.studij.ime</td>
                                    <td class="text-center"><a class='btn btn-info btn-xs' href="@Url.Action("UrediIspit", "Admin", new { Id = i.ispit.id })"><span class="glyphicon glyphicon-edit"></span> Uredi</a> <a href="@Url.Action("ObrisiIspit", "Admin", new { Id = i.ispit.id })" class="btn btn-danger btn-xs" onclick="return confirm('Sigurni ste da želite obrisati ovaj ispit?')"><span class="glyphicon glyphicon-remove"></span> Izbriši</a></td>
                                </tr>
                            }
                        </table>
                        <a class='btn btn-success' href="@Url.Action("DodajIspit", "Admin")"><span class="glyphicon glyphicon-plus-sign"></span> Dodaj novi ispit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>