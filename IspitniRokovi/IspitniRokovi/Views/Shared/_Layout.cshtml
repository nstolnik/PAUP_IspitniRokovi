<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Ispitni rokovi - web aplikacija</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ispitni rokovi", "PopisIspita", "Ispiti", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Prijava ispita", "PrijavaIspita", "Ispiti")</li>
                        <li>@Html.ActionLink("Popis ispita", "PopisIspita", "Ispiti")</li>
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Admin panel", "PopisKorisnika", "Admin")</li>
                        }
                        <li>@Html.ActionLink("Odjava", "Odjava", "Korisnici")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Prijava", "Prijava", "Korisnici")</li>
                        <li>@Html.ActionLink("Registracija", "Registracija", "Korisnici")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.min.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
