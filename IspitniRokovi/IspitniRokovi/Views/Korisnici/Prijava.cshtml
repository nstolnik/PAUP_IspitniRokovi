@using IspitniRokovi.Models
@model LoginViewModel



<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="container">
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Prijavite se</h3>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" role="form" class="well">
                            <fieldset>
                                <div class="form-group ">
                                    <p>Korisničko ime:</p>
                                    @Html.TextBoxFor(model => model.username, new { @class = "login-input", required = "required" })
                                </div>
                                <div class="form-group">
                                    <p>Lozinka:</p>
                                    @Html.PasswordFor(model => model.password, new { @class = "login-input", required = "required" })
                                </div>
                                @Html.ValidationSummary(false)
                                <input class="btn btn-lg btn-success" type="submit" value="Login">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


}